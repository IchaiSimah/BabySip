# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
# For Docker Compose, use 'mysql' as host (service name)
# For external database, use actual host/IP
DB_HOST=mysql
DB_PORT=3306
DB_NAME=bbt_app
DB_USER=bbt_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
# For production, specify your domain: https://yourdomain.com
# For development: http://localhost:8081
# Use * for all origins (less secure, not recommended for production)
CORS_ORIGIN=*

# Email Configuration (Gmail SMTP)
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

