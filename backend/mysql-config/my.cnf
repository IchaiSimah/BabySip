[mysqld]
# Optimized for 1GB RAM (AWS Free Tier)
# Safe configuration that works in Docker

# Buffer pool size - use 25% of available RAM
innodb_buffer_pool_size = 256M

# Connection settings - limit to prevent memory issues
max_connections = 50
max_user_connections = 50

# Table cache
table_open_cache = 200
# table_definition_cache = 200  # Removed - causes warnings in MySQL 8.0

# Temporary tables
tmp_table_size = 32M
max_heap_table_size = 32M

# InnoDB settings (safe values)
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
# innodb_flush_method = O_DIRECT  # Removed - can cause issues in Docker
# innodb_log_file_size = 64M  # Removed - requires MySQL restart, can cause issues

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

